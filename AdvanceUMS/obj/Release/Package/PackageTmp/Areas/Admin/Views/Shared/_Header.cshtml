<!-- main-header -->
<div class="main-header sticky side-header nav nav-item">
    <div class="container-fluid">
        <div class="main-header-left ">
            <div class="responsive-logo">
                <a href="#"><img src="~/assets/img/hmc-logo.png" class="logo-1" alt="logo"></a>
                <a href="#"><img src="~/assets/img/hmc-logo.png" class="dark-logo-1" alt="logo"></a>
                <a href="#"><img src="~/assets/img/hmc-logo.png" class="logo-2" alt="logo"></a>
                <a href="#"><img src="~/assets/img/hmc-logo.png" class="dark-logo-2" alt="logo"></a>
            </div>
            <div class="app-sidebar__toggle" data-toggle="sidebar">
                <a class="open-toggle" href="#"><i class="header-icon fe fe-align-left"></i></a>
                <a class="close-toggle" href="#"><i class="header-icons fe fe-x"></i></a>
            </div>
        </div>
        <div class="main-header-right">

            <div class="nav nav-item  navbar-nav-right ml-auto">

                <div class="dropdown main-profile-menu nav nav-item nav-link">
                    <a class="profile-user d-flex" href=""><img alt="" src="@ViewBag.PhotoPath"></a>
                    <div class="dropdown-menu">
                        <div class="main-header-profile bg-primary p-3">
                            <div class="d-flex wd-100p">
                                <div class="main-img-user"><img alt="" src="@ViewBag.PhotoPath" class=""></div>
                                <div class="ml-3 my-auto">
                                    <h6>@ViewBag.UserName</h6><span>Member since @ViewBag.RegisterDate</span>
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.IsAdmin == true)
                        {
                            <a class="dropdown-item" href="/admin/user/profile?ID=@ViewBag.UserID"><i class="bx bx-user-circle"></i>Profile</a>
                        }
                        else
                        {
                            <a class="dropdown-item" href="/admin/user/edit?ID=@ViewBag.UserID"><i class="bx bx-lock"></i>Change Password</a>

                        }

                        <a class="dropdown-item" href="/Account/LogOut"><i class="bx bx-log-out"></i> Sign Out</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
