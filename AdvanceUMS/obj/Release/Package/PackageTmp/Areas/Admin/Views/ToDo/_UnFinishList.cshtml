@model IEnumerable<AdvanceUMS.Models.tblToDo>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">UnFinish To Do List</h3>
    </div>
    <div class="box-body">
        <ul class="todo-list">
            @foreach (var item in Model)
            {
                <li>
                    <input type="checkbox" value="" class="minimal unfinish" rel="@item.ID" name="">
                    <span class="text">@item.Description</span>
                    <small class="label label-danger"><i class="fa fa-clock-o"></i>@item.CreateDate</small>
                    <div class="tools">
                        <i class="fa fa-trash-o"></i>
                    </div>
                </li>
            }            
        </ul>
    </div>
</div>
<script src="~/Scripts/Common.js"></script>
<script>
    $(document).ready(function () {
        $('input[type="checkbox"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue'
        });
        
        $(".todo-list").on("ifChecked", "input.unfinish", function () {
            var ID = $(this).attr("rel");            
            UpdateToDoStatus(ID);
        });
    });
</script>
