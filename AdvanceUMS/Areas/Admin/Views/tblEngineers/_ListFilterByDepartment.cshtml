        $('#tblSupervisor').DataTable({
            pageLength: '100',
            dom: 'Bfrtip',
            //buttons: [

            //    'excelHtml5',

            //    'pdfHtml5'
            //]
        });
    });
    $(document).ready(function () {
        $("#tblUser").DataTable();
        $('.delete').click(function () {
            var url = $(this).data('url');
            $.get(url, function (data) {
                if (data.success == "0") {
                    $('#tblUser').load(data.url);
                    $("#tblUser").DataTable();
                    $('#message').html(data.message);
                }
                else if (data.success == "3") {
                    $('#message').html(data.message);
                }
            });
            return false;
        });
    });
</script>

